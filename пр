<script>
    //function seup_fireworks(){
        window.onload = function () {
            var firework = JS_FIREWORKS.Fireworks({
                id : 'fireworks-canvas',
                hue : 120,
                particleCount : 50,
                delay : 0,
                minDelay : 20,
                maxDelay : 40,
                boundaries : { // of respawn and target
                    top: window.innerHeight / 80,
                    bottom: window.innerHeight / 20,
                    left: 0,
                    right: window.innerWidth / 4
                },
                fireworkSpeed : 2,
                fireworkAcceleration : 1.05,
                particleFriction : .95,
                particleGravity : 1.5
            });
            firework.start();
        };
    //}

    // Добавляем обработчик события click к кнопке
    //document.getElementById('firework').addEventListener('click', seup_fireworks);
</script>
